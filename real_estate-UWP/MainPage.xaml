<Page
    x:Class="real_estate_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:real_estate_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="304" Margin="0" VerticalAlignment="Center" Width="402">
            <TextBlock TextWrapping="Wrap" Text="Вход" FontSize="36"/>
            <TextBlock TextWrapping="Wrap" Text="Логин" Margin="0,10" FontSize="20"/>
            <TextBox TextWrapping="Wrap" Text="Введите ID, e-mail или номер телефона" Margin="0,0,0,10" FontSize="20" TextChanged="TextBox_TextChanged"/>
            <TextBlock TextWrapping="Wrap" Text="Пароль" Margin="0,10" FontSize="20"/>
            <TextBox TextWrapping="Wrap" Text="Введите пароль" Margin="0,0,0,10" FontSize="20"/>
            <Button x:Name="TestButton" Content="Войти" HorizontalAlignment="Stretch" Margin="0,20" Click="TestButton_Click" FontSize="24"/>
        </StackPanel>

    </Grid>
</Page>
